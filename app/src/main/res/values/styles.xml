<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/secondarycolor</item>
        <item name="android:textColorAlertDialogListItem">@color/white</item>
        <item name="colorBackgroundFloating">@color/primarycolor</item>
        <item name="android:colorBackgroundFloating" tools:targetApi="m">@color/colorPrimaryDark</item>

    </style>





    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/gameover</item>
        <item name="android:windowExitAnimation">@anim/slide_up</item>
    </style>


</resources>
